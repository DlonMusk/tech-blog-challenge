<div class="card">
    <div class="card-header">
        <header>{{post.title}}</header>
    </div>
    <div class="card-body">
        <input type="text" placeholder="{{post.content}}" id="content">
        <p class="card-text">{{post.user.name}} at : {{format_time post.date_created}}</p>
    </div>
</div>
<br>
<div class="card">
    <button id="update" class="btn btn-primary">Update Post</button>
    <button id="delete" class="btn btn-primary">Delete Post</button>
</div>
<div id="post_id" data-postId="{{post.id}}"></div>


<script src="/js/updateDeletePost.js"></script>

